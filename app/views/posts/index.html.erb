<!-- <div class="main"> -->
<div class="col-md-8">
<% if logged_in? %>
    <%= render 'form' %>
<% end %>

<h2>投稿一覧</h2>
<table>
    <% @posts.each do |post| %>
    <tr>
        <td class="icon">
            <%= image_tag post.user.icon, width: 50, height: 50 %><br>
            「<%= post.user.name %>」
        </td>
        <!-- <td class="name">「<%= post.user.name %>」</td> -->
        <td class="body">
            <%= image_tag(post.picture_url, width:380) if post.picture.present? %><br>
            <%= post.body %>
        </td>
        <!-- <td class="created_at"><%= link_to post.created_at, post %></td> -->
    </tr>
    <tr>
        <% if logged_in? && current_user == post.user %>
            <td class="destroy"><%= link_to '×', post, method: :delete %></td>
        <% end %>
    </tr>
    <% end %>
</table>
</div>